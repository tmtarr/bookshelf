<%- include('header'); -%>
    <div class="container">
      <h3 class="title">Setting</h3>

      <div class="row">
        <div class="col-lg-6">
          <form method="POST" action="/setting">
            <div class="form-group">
              <label>userid: <%= display.userid %></label>
            </div>
            <div class="form-group">
              <label>name</label>
              <input type="text" class="form-control" id="name" name="name" maxlength="20" value="<%= userinfo.name %>">
            </div>
<!-- 【TODO】あとで実装
            <div class="form-group">
              <label>password</label>
              <input type="password" class="form-control" id="password" name="password" required maxlength="100">
            </div>
-->
            <div class="mb-3">
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="inlineCheckbox1" name="publicFlg" value="1" <%= userinfo.publicFlg %>>
                <label class="form-check-label" for="inlineCheckbox1">公開</label>
              </div>
            </div>

            <button type="submit" class="btn btn-primary">更新</button>
          </form>
        </div>
      </div>
    </div>
    <script src="/javascripts/validator.js"></script>
    <script>
      document.getElementById("name").focus();
    </script>
<%- include('footer'); -%>
