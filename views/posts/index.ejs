<%- include('../header'); -%>
    <div class="container">
      <h3 class="title">list</h3>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th>category</th>
            <th>action</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% for (var i = 0; i < books.length; i++) { %>
            <tr>
              <td>
                <a href="https://amazon.jp/dp/<%= books[i].isbn10 %>" target="_blank">
                  <img src="https://images-na.ssl-images-amazon.com/images/P/<%= books[i].isbn10 %>.09.MZZZZZZZ.jpg" class="book_image">
                </a>
              </td>
              <td><%= books[i].bookname %></td>
              <td>
                <div><%= books[i].category %></div>
                <ul>
                  <% if (books[i].ebook_flg == 1) { %>
                    <li class="flg_eb">電</li>
                  <% } %>
                  <% if (books[i].wish_flg == 1) { %>
                    <li class="flg_want">欲</li>
                  <% } %>
                  </ul>
              </td>
              <td>
                <form method="GET" action="/posts/<%= books[i].id %>/edit">
                  <input type="submit" value="edit" class="btn btn-secondary">
                </form>
              </td>
              <td>
                <form method="POST" action="/posts/<%= books[i].id %>?_method=delete">
                  <input type="submit" value="delete" class="btn btn-danger">
                </form>
              </td>
            </tr>
          <% } %>
      
        </tbody>
      </table>
    </div>
<%- include('../footer'); -%>
