<%- include('header'); -%>
    <div class="container">
      <h3 class="title">Signup</h3>

      <div class="row">
        <div class="col-lg-6">
          <form method="POST" action="/signup">
            <div class="form-group">
              <label>userid</label>
              <input type="text" class="form-control" id="userid" name="userid" required maxlength="20" inputmode="url" oninput="delZenkaku(this);">
            </div>
            <div class="form-group">
              <label>name</label>
              <input type="text" class="form-control" id="name" name="name" maxlength="20">
            </div>
            <div class="form-group">
              <label>password</label>
              <input type="password" class="form-control" id="password" name="password" required maxlength="100">
            </div>
            <button type="submit" class="btn btn-primary">サインアップ</button>
            <% if (display.error) { %>
              <span style="color: red; margin-left: 1em;">IDがすでに存在しています。</span>
            <% } %>
          </form>
        </div>
      </div>
    </div>
    <script src="/javascripts/validator.js"></script>
    <script>
      document.getElementById("userid").focus();
    </script>
<%- include('footer'); -%>
